<Window x:Class="PhotoPrismCleanup.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PhotoPrism Cleanup"
        Height="650" Width="900"
        Icon="Icons/logo.ico"
        Background="{DynamicResource WindowBackground}"
        Foreground="{DynamicResource ControlForeground}"
        PreviewKeyDown="Window_PreviewKeyDown">
    <Window.Resources>
        <!-- Theme toggle button style -->
        <Style x:Key="ThemeBtnStyle" TargetType="Button">
            <Setter Property="Width"  Value="36"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="18" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center"
                                VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- Delete/Keep button styles -->
        <Style x:Key="DeleteBtn" TargetType="Button">
            <Setter Property="Background" Value="Red"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        <Style x:Key="KeepBtn" TargetType="Button">
            <Setter Property="Background" Value="Green"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>

    <DockPanel>
        <!-- Top toolbar -->
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal"
                Background="{DynamicResource ControlBackground}"
                Height="40" VerticalAlignment="Center">
            <Button x:Name="HelpBtn" Content="Help" Width="60" Margin="5"
              Click="HelpBtn_Click"/>
            <Button x:Name="ThemeBtn" Style="{StaticResource ThemeBtnStyle}"
              Click="ThemeBtn_Click"/>
        </StackPanel>

        <!-- Status bar -->
        <StatusBar DockPanel.Dock="Bottom"
               Background="{DynamicResource ControlBackground}">
            <TextBlock x:Name="StatusText" Text="Not connected" Margin="5,0"/>
        </StatusBar>

        <!-- Overall swipe/Delete progress bar -->
        <ProgressBar x:Name="DeleteProgressBar"
                 DockPanel.Dock="Bottom"
                 Height="8"
                 Minimum="0"
                 Maximum="1"
                 Value="0"
                 Visibility="Collapsed"/>

        <Grid>
            <!-- Connection form -->
            <Border x:Name="ConnectGrid"
              Background="{DynamicResource ControlBackground}"
              CornerRadius="8" Padding="16" Margin="50">
                <ScrollViewer>
                    <StackPanel>
                        <TextBlock Text="SSH Host:"/>
                        <TextBox x:Name="HostBox"/>

                        <TextBlock Text="SSH Port:" Margin="0,8,0,0"/>
                        <TextBox x:Name="PortBox"/>

                        <TextBlock Text="Username:" Margin="0,8,0,0"/>
                        <TextBox x:Name="UserBox"/>

                        <CheckBox x:Name="UseKeyBox" Content="Use SSH Key" Margin="0,8,0,0"/>

                        <TextBlock Text="Key Path:" Margin="0,8,0,0"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBox x:Name="KeyBox" Width="300"/>
                            <Button Content="Browse..." Margin="5,0,0,0"
                      Click="BrowseKey_Click"/>
                        </StackPanel>

                        <TextBlock Text="Password:" Margin="0,8,0,0"/>
                        <PasswordBox x:Name="PwdBox"/>

                        <TextBlock Text="Remote Folder:" Margin="0,8,0,0"/>
                        <TextBox x:Name="FolderBox"/>

                        <TextBlock Text="Thumbnail Cache Folder:" Margin="0,8,0,0"/>
                        <TextBox x:Name="ThumbCacheBox"/>

                        <TextBlock Text="Import Folder:" Margin="0,8,0,0"/>
                        <TextBox x:Name="ImportFolderBox"/>

                        <CheckBox x:Name="ShowPhotosBox" Content="Show Photos" Margin="0,8,0,0"/>
                        <CheckBox x:Name="ShowVideosBox" Content="Show Videos"/>

                        <Button x:Name="ConnectBtn" Content="Connect"
                    Margin="0,16,0,0" Height="30"
                    Click="ConnectBtn_Click"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Main tabs (hidden until connected) -->
            <TabControl x:Name="MainTabs" Visibility="Collapsed"
                  Background="{DynamicResource ControlBackground}">
                <!-- REVIEW TAB -->
                <TabItem Header="Review">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Media display -->
                        <Border Grid.Row="0" Background="{DynamicResource ControlBackground}">
                            <Grid>
                                <Image x:Name="SwipeImage"
                       Stretch="Uniform"
                       Visibility="Collapsed"/>
                                <MediaElement x:Name="SwipeVideo"
                              Stretch="Uniform"
                              LoadedBehavior="Manual"
                              UnloadedBehavior="Stop"
                              Visibility="Collapsed"/>
                                <TextBlock x:Name="LoadingOverlay"
                           Text="Loading..."
                           FontSize="24"
                           Foreground="White"
                           Background="#80000000"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Visibility="Collapsed"/>
                            </Grid>
                        </Border>

                        <!-- Swipe controls -->
                        <WrapPanel Grid.Row="1" HorizontalAlignment="Center" Margin="10">
                            <Button x:Name="DeleteBtn" Style="{StaticResource DeleteBtn}"
                      Content="Delete" Click="DeleteBtn_Click"/>
                            <Button x:Name="KeepBtn" Style="{StaticResource KeepBtn}"
                      Content="Keep" Click="KeepBtn_Click"/>
                            <Button x:Name="UndoBtn" Content="Undo" Click="UndoBtn_Click"/>
                        </WrapPanel>
                    </Grid>
                </TabItem>

                <!-- SETTINGS TAB -->
                <TabItem Header="Settings">
                    <ScrollViewer>
                        <StackPanel Margin="10">
                            <TextBlock Text="Remote Folder:"/>
                            <TextBox x:Name="SettingsFolderBox"/>

                            <TextBlock Text="Thumbnail Cache Folder:" Margin="0,8,0,0"/>
                            <TextBox x:Name="SettingsThumbCacheBox"/>

                            <TextBlock Text="Import Folder:" Margin="0,8,0,0"/>
                            <TextBox x:Name="SettingsImportFolderBox"/>

                            <CheckBox x:Name="SettingsShowPhotosBox"
                        Content="Show Photos" Margin="0,8,0,0"/>
                            <CheckBox x:Name="SettingsShowVideosBox"
                        Content="Show Videos"/>

                            <WrapPanel Margin="0,16,0,0">
                                <Button Content="Save Settings"
                        Click="SaveSettings_Click" Margin="0,0,8,0"/>
                                <Button Content="Save Progress"
                        Click="SaveProgress_Click" Margin="0,0,8,0"/>
                                <Button Content="Clear Thumbnail Cache"
                        Click="ClearCache_Click" Margin="0,0,8,0"/>
                                <Button Content="Import Photos/Videos"
                        Click="ImportPhotos_Click" Margin="0,0,8,0"/>
                                <Button Content="Bulk Delete Now"
                        Click="BulkDeleteNow_Click" Margin="0,0,8,0"/>
                                <Button Content="Logout" Click="Logout_Click"/>
                            </WrapPanel>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>
            </TabControl>
        </Grid>
    </DockPanel>
</Window>
