<Window x:Class="PhotoPrismCleanup.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PhotoPrism Cleanup" Height="650" Width="900"
        Background="{DynamicResource WindowBackground}"
        Foreground="{DynamicResource ControlForeground}"
        PreviewKeyDown="Window_PreviewKeyDown">

    <DockPanel>

        <!-- TOP MENU -->
        <Menu DockPanel.Dock="Top" Background="{DynamicResource ControlBackground}">
            <MenuItem Header="_Tools">
                <MenuItem Header="Bulk Delete Now" Click="BulkDeleteNow_Click"/>
                <MenuItem Header="Clear Thumbnail Cache" Click="ClearCache_Click"/>
                <MenuItem Header="Import Photos" Click="ImportPhotos_Click"/>
            </MenuItem>
            <MenuItem Header="Logout" Click="Logout_Click"/>
        </Menu>

        <!-- STATUS BAR -->
        <StatusBar DockPanel.Dock="Bottom" Background="{DynamicResource ControlBackground}">
            <TextBlock x:Name="StatusText" Text="Not connected"/>
        </StatusBar>

        <Grid>
            <!-- CONNECT PANEL -->
            <Grid x:Name="ConnectGrid" Margin="50,30" 
            Background="{DynamicResource ControlBackground}" 
            Padding="20" CornerRadius="8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Host:" Grid.Row="0" Grid.Column="0" Margin="0,4"/>
                <TextBox   x:Name="HostBox" Grid.Row="0" Grid.Column="1" Margin="5"/>

                <TextBlock Text="Port:" Grid.Row="1" Grid.Column="0" Margin="0,4"/>
                <TextBox   x:Name="PortBox" Grid.Row="1" Grid.Column="1" Margin="5"/>

                <TextBlock Text="Username:" Grid.Row="2" Grid.Column="0" Margin="0,4"/>
                <TextBox   x:Name="UserBox" Grid.Row="2" Grid.Column="1" Margin="5"/>

                <CheckBox x:Name="UseKeyBox" Content="Use Key Auth"
                  Grid.Row="3" Grid.Column="1" Margin="5"/>

                <TextBlock Text="Key Path:" Grid.Row="4" Grid.Column="0" Margin="0,4"/>
                <TextBox   x:Name="KeyBox" Grid.Row="4" Grid.Column="1" Margin="5"/>

                <TextBlock Text="Password:" Grid.Row="5" Grid.Column="0" Margin="0,4"/>
                <PasswordBox x:Name="PwdBox" Grid.Row="5" Grid.Column="1" Margin="5"/>

                <Button x:Name="ConnectBtn" Content="Connect"
                Grid.Row="6" Grid.ColumnSpan="2"
                Width="120" Margin="0,10,0,0"
                HorizontalAlignment="Center"
                IsDefault="True"
                Click="ConnectBtn_Click"/>
            </Grid>

            <!-- REVIEW & SETTINGS TABS -->
            <TabControl x:Name="MainTabs" Visibility="Collapsed" 
                  Background="{DynamicResource ControlBackground}">
                <!-- REVIEW TAB -->
                <TabItem Header="Review">
                    <Grid Background="{DynamicResource ControlBackground}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- MEDIA DISPLAY + LOADING -->
                        <Border Grid.Row="0" Margin="10" 
                    BorderBrush="Gray" BorderThickness="1">
                            <Grid>
                                <Viewbox>
                                    <Grid>
                                        <Image x:Name="PhotoImg" Stretch="Uniform" Visibility="Collapsed"/>
                                        <MediaElement x:Name="VideoPlayer"
                                  LoadedBehavior="Manual"
                                  UnloadedBehavior="Stop"
                                  Visibility="Collapsed"/>
                                    </Grid>
                                </Viewbox>
                                <!-- overlay when loading -->
                                <Grid x:Name="LoadingOverlay" Background="#80000000" Visibility="Collapsed">
                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <ProgressBar IsIndeterminate="True" Width="200" Height="20"/>
                                        <TextBlock Text="Loading large file…" 
                               Foreground="White" 
                               HorizontalAlignment="Center" 
                               Margin="0,10,0,0"/>
                                    </StackPanel>
                                </Grid>
                            </Grid>
                        </Border>

                        <!-- ACTION BUTTONS -->
                        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button x:Name="DelBtn" Content="Delete"
                      Style="{StaticResource DeleteBtn}" Click="DelBtn_Click"/>
                            <Button x:Name="UndoBtn" Content="Undo (Z/↓)"
                      Click="UndoBtn_Click"/>
                            <Button x:Name="KeepBtn" Content="Keep"
                      Style="{StaticResource KeepBtn}" Click="KeepBtn_Click"/>
                        </StackPanel>

                        <TextBlock Grid.Row="2" x:Name="ProgressText"
                       HorizontalAlignment="Center" Margin="5"/>
                    </Grid>
                </TabItem>

                <!-- SETTINGS TAB -->
                <TabItem Header="Settings">
                    <ScrollViewer>
                        <StackPanel Margin="10" Background="{DynamicResource ControlBackground}">
                            <TextBlock Text="Remote Folder:" Margin="0,4"/>
                            <TextBox x:Name="FolderBox" Margin="0,0,0,10"/>

                            <TextBlock Text="Thumbnail-Cache Folder:" Margin="0,4"/>
                            <TextBox x:Name="ThumbCacheBox" Margin="0,0,0,10"/>

                            <TextBlock Text="Show Media Types:" FontWeight="Bold" Margin="0,10,0,4"/>
                            <CheckBox x:Name="ShowPhotosBox" Content="Photos" Margin="0,0,0,4"/>
                            <CheckBox x:Name="ShowVideosBox" Content="Videos" Margin="0,0,0,10"/>

                            <TextBlock Text="Theme:" FontWeight="Bold" Margin="0,10,0,4"/>
                            <RadioButton x:Name="ThemeSystem" Content="System default" GroupName="Theme" Margin="0,0,0,4"/>
                            <RadioButton x:Name="ThemeLight"   Content="Light"           GroupName="Theme" Margin="0,0,0,4"/>
                            <RadioButton x:Name="ThemeDark"    Content="Dark"            GroupName="Theme" Margin="0,0,0,10"/>

                            <!-- Save settings & progress buttons -->
                            <WrapPanel HorizontalAlignment="Right" Margin="0,20,0,0">
                                <Button Content="Save Progress" Width="110" Margin="0,0,5,0"
                        Click="SaveProgress_Click"/>
                                <Button Content="Save Settings" Width="110"
                        Click="SaveSettings_Click"/>
                            </WrapPanel>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>
            </TabControl>
        </Grid>
    </DockPanel>
</Window>
