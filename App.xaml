<Application x:Class="PhotoPrismCleanup.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
  <Application.Resources>
    <!-- Accent brush and global rounded Button style -->
    <SolidColorBrush x:Key="Accent" Color="#007ACC" />
    <Style TargetType="Button">
      <Setter Property="Background" Value="{DynamicResource Accent}" />
      <Setter Property="Foreground" Value="White" />
      <Setter Property="Padding" Value="8,4" />
      <Setter Property="Margin" Value="4" />
      <Setter Property="FontSize" Value="14" />
      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate TargetType="Button">
            <Border Background="{TemplateBinding Background}"
                    CornerRadius="4"
                    Padding="{TemplateBinding Padding}">
              <ContentPresenter HorizontalAlignment="Center"
                                VerticalAlignment="Center"/>
            </Border>
          </ControlTemplate>
        </Setter.Value>
      </Setter>
    </Style>
    <!-- Specialized keep/delete button styling -->
    <Style x:Key="KeepBtn" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
      <Setter Property="Background" Value="#28a745"/>
    </Style>
    <Style x:Key="DeleteBtn" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
      <Setter Property="Background" Value="#dc3545"/>
    </Style>
    <ResourceDictionary>
        <ResourceDictionary.MergedDictionaries>
            <!-- these XAML files you’ll add next -->
            <ResourceDictionary Source="Themes/LightTheme.xaml"
                        x:Key="LightTheme" />
            <ResourceDictionary Source="Themes/DarkTheme.xaml"
                        x:Key="DarkTheme" />
        </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
    </Application.Resources>
</Application>
