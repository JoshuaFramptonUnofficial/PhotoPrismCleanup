<Window x:Class="PhotoPrismCleanup.SummaryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Confirm Deletion" SizeToContent="WidthAndHeight">
    <StackPanel Margin="10">
        <TextBlock x:Name="Lbl" FontWeight="Bold" Margin="0,0,0,10"/>
        <CheckBox x:Name="DownloadBefore" Content="Download all before deleting" Margin="0,0,0,10"/>
        <ItemsControl x:Name="ThumbList" Height="200" Width="400">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Gray" BorderThickness="1" Margin="2">
                        <Grid Width="100" Height="75">
                            <Image Source="{Binding Thumb}" Stretch="UniformToFill"/>
                            <Button Background="Transparent" Command="{Binding PlayCommand}"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        <WrapPanel HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="OK" Content="Delete Items" Width="120" Click="OK_Click" Margin="0,0,5,0"/>
            <Button x:Name="Cancel" Content="Cancel" Width="80" Click="Cancel_Click"/>
        </WrapPanel>
        <TextBlock x:Name="ResultText" Visibility="Collapsed" Margin="0,10,0,0" TextWrapping="Wrap"/>
        <Button x:Name="CloseBtn" Content="Close" Visibility="Collapsed"
            HorizontalAlignment="Right" Width="80" Click="Close_Click" Margin="0,5,0,0"/>
    </StackPanel>
</Window>
